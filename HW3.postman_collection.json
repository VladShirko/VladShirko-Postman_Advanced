			"name": "Get Pikachu",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const pokemonList = pm.collectionVariables.get(\"pokemonResults\");\r",
							"const pikachu = pokemonList.find(pokemon => pokemon.name === \"pikachu\");\r",
							"pm.collectionVariables.set(\"pikachuUrl\", pikachu.url);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"const responseJson = pm.response.json();\r",
							"console.log(`Pokemon type: ${responseJson.types[0].type.name}`);\r",
							"\r",
							"pm.test(\"Pikachu is male\", function () {\r",
							"    const genderURL = \"https://pokeapi.co/api/v2/gender/male\";\r",
							"    pm.sendRequest({\r",
							"        url: genderURL,\r",
							"        method: \"GET\",\r",
							"        header: {\r",
							"            \"Content-Type\": \"application/json\"\r",
							"        }\r",
							"    }, function (err, res) {\r",
							"        pm.expect(res).to.have.status(200);\r",
							"        const malePokemon = res.json().pokemon_species_details.find(p => p.pokemon_species.name === \"pikachu\");\r",
							"        pm.expect(malePokemon).not.to.be.undefined;\r",
							"    });\r",
							"});\r",
							"\r",
							"Object.keys(pm.collectionVariables.toObject()).forEach((key) => {\r",
							"    pm.collectionVariables.set(key, null);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
